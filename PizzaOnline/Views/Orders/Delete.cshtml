@model PizzaOnline.Order

@{
    ViewBag.Title = "Delete Order";
}

<!DOCTYPE html>

<html>
<head>
    <style>
        body {
            background-color: #009472;
        }
    </style>
</head>
<body>
    <h3>Are you sure you want to delete this order of customer: @Model.Customer.CustomerName?</h3>
    <div>
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
    
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
</body>
</html>
