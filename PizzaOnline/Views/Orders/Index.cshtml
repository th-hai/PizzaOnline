@model IEnumerable<PizzaOnline.Order>

@{
    ViewBag.Title = "Bills";
}

<head>
    <style>
        body {
            background-color:  #009871;
        }
    </style>
</head>
<h2>Bill List</h2><br/>
<div>
    <table class="table table-striped table-hover ">
        <thead>
        <tr>
            <th>Customer Name</th>
            <th>Total</th>
            <th>Action</th>
        </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tbody>
            <tr class="info">
                <td>@Html.DisplayFor(modelItem => item.Customer.CustomerName)</td>
                <td>@Html.DisplayFor(modelItem => item.Total)</td>
                <td>@Html.ActionLink("Details", "Details", new {id = item.OrderID}) |
                    @Html.ActionLink("Delete", "Delete", new {id = item.OrderID})</td>
            </tr>
            </tbody>
        }
    </table> 
</div>
